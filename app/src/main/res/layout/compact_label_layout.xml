<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/DumboTheme"
    android:id="@+id/the_label"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:translationZ="50dp">

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/compact_label_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:rowCount="3"
    android:columnCount="5"
    android:background="@color/primary_transparent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/fligth_id"
        android:layout_column="0"
        android:layout_row="0"
        android:gravity="left"
        android:text="FLIGHT12"
        android:textAllCaps="true"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/flight_altitude"
        android:layout_column="4"
        android:layout_row="0"
        android:gravity="right"
        android:textStyle="bold"
        android:text="400ft"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/slide_to_predict"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:textAlignment="center"
        android:textSize="10dp"

        android:text="SLIDE TO PREDICT"/>

</GridLayout>
</FrameLayout>